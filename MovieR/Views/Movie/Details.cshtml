@model MovieR.Model.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Template.cshtml";
}

<h2>Details</h2>

<table>
	<tr>
		<td>
		            @Html.LabelFor(model => model.MovieId, htmlAttributes: new { @class = "control-label col-md-2" } )

		</td>
		<td>
				                @Model.MovieId
		</td>
	</tr>
		<tr>
		<td>
		            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" } )

		</td>
		<td>
				                @Model.Name
		</td>
	</tr>
		<tr>
		<td>
		            @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class = "control-label col-md-2" } )

		</td>
		<td>
				                @Model.Rating
		</td>
	</tr>
		<tr>
		<td>
		            @Html.LabelFor(model => model.imgURL, htmlAttributes: new { @class = "control-label col-md-2" } )

		</td>
		<td>
				                @Model.imgURL
		</td>
	</tr>

</table>

<br/>

        <div style="float:left" class="col-md-2">
        			<a href="@Url.Action("Delete", "Movie", new {id=@Model.MovieId})" class="btn btn-primary btn-large btn-block"> Delete </a>
</div>
